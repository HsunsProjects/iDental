<Window x:Class="iDental.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iDental.Views"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="450"
        Topmost="True" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" WindowStyle="None"
        ContentRendered="Window_Login_ContentRendered">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.9*"></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Row="0"></Image>
        <TextBlock Grid.Row="1"
                   x:Name="TextBlockStatus" VerticalAlignment="Center" Text="狀態列" FontSize="16" FontFamily="Microsoft JhengHei"/>
    </Grid>
</Window>
